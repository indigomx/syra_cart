<%= error_messages_for :user %>

<% @body_id = 'signup' %>

<div id="new-customer">
  <h2>Nuevo cliente</h2>

  <% hook :signup do %>

    <% form_for(@user) do |f| %>

      <% hook :signup_inside_form do %>
        <%= render 'shared/user_form', :f => f %>
        <p><%= submit_tag "Crear", :class => 'button primary' %></p>
      <% end %>

    <% end %>
    &oacute; <%= link_to "Cliente existente", login_path %>

  <% end %>

</div>
